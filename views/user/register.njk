{% extends "main/base.njk" %}

{% block content %}
  <article>
    <h1>{{ title }}</h1>
    <form method="post" action="/register">
      <div>
        <label for="user_name">Username:</label>
        <input type="text" id="user_name" name="user_name" required="required">
      </div>
      <div>
        <label for="user_pass">Password:</label>
        <input type="password" id="user_pass" name="user_pass" required="required">
      </div>
      <div>
        <label for="user_email">Email:</label>
        <input type="email" id="user_email" name="user_email" required="required">
        </div>
      <button type="submit">Login</button>
    </form>

    {# error message #}
    {% if error %}
      <p class="error">{{ error }}</p>
    {% endif %}
    {# success message #}
    {% if success %}
      <p class="success">{{ success }}</p>
    {% endif %}
    {# link to register #}
    <p>Already have an account?
      <a href="/login/">Log in here</a>.</p>
  </article>
{% endblock %}
{% block title %}Login{% endblock %}